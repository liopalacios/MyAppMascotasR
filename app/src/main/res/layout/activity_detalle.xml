<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    >
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cvMascotaDetalle"
        android:layout_width="350dp"
        android:layout_height="380dp"
        android:layout_marginBottom="@dimen/cv_bottom"
        card_view:cardCornerRadius="@dimen/cv_radius">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/ivFotoDeatlle"
                android:src="@drawable/perro1"
                android:layout_width="320dp"
                android:transitionName="@string/animacion_foto"
                android:layout_height="320dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tvLikesDetalle"
                    android:text="@string/app_likes"
                    android:textSize="30dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/imgLikesBone"
                    android:src="@drawable/like"
                    android:layout_width="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="30dp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
